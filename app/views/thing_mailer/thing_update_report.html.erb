<h3>Import Report</h3>

<% if @deleted_thing_ids_with_adoptee.present? %>
  <table border="1">
    <thead>
      <tr>
        <td><b><%= t('defaults.things').titleize %> With Adoptee Removed</b></td>
      </tr>
    </thead>
    <tbody>
      <% @deleted_thing_ids_with_adoptee.each do |thing_id| %>
        <tr>
          <td><%= thing_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

